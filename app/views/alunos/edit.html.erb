<h1>Alterar Aluno</h1>

<%= form_for :aluno, url: aluno_path(@aluno), method: :patch do |f| %>
	<% if @aluno.errors.any? %>
    <div id="error_explanation">
      <h2>
        Este formul√°rio possui <%= pluralize(@aluno.errors.count, "erro") %>:
      </h2>
      <ul>
        <% @aluno.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :nome %><br>
    <%= f.text_field :nome %>
  </p>

  <p>
    <%= f.label :cadeiras %><br>
    <%= f.number_field :cadeiras, in: 0..20, step:1 %>
  </p>

  <p>
    <%= f.label :semestre %><br>
    <%= f.number_field :semestre, in: 1..8, step:1 %>
  </p>

  <p>
    <%= f.label :informacao, 'Curso' %><br>
    <%= f.collection_select(:informacao, Informacao.all, :id, :curso, :prompt => "Selecione") %>
  </p>

  <p>
    <%= f.submit 'Salvar Aluno' %>
  </p>
<% end %>

<%= link_to 'Voltar', alunos_path %>